{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../../packages/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
